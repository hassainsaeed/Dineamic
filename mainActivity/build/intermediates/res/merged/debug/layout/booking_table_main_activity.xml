<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chooseATableTitle"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_border"
        android:ems="10"
        android:gravity="center"
        android:text="@string/enter_seats"
        android:textColor="#FFFFFF" 
        android:textStyle="bold"
        />


        <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_below="@+id/chooseATableTitle"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:onClick="buttonClick2"
        android:src="@drawable/table_for_2" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageButton2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="39dp"
            android:background="@null"
            android:onClick="buttonClick4"
            android:src="@drawable/table_for_4"
            android:layout_gravity="left|bottom" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="buttonClick8"
            android:src="@drawable/table_for_8"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageButton4"
            android:layout_alignTop="@+id/imageButton1"
            android:background="@null"
            android:onClick="buttonClick3"
            android:src="@drawable/table_for_3"
            android:layout_gravity="right|top" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:onClick="buttonClick5"
            android:src="@drawable/table_for_5"
            android:layout_gravity="right|bottom" />

<TextView
        android:id="@+id/editText1"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:textSize="20sp"
    android:layout_marginBottom="54dp"
    android:ems="10"
        android:text="@string/other"
    android:layout_alignParentBottom="true"
    android:layout_toStartOf="@+id/editText2" />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="9dp"
        android:paddingLeft="9dp"
        android:textColor="#FFFFFF"
        android:text="@string/findTable"
        android:onClick="buttonClickOther" 
        android:background="@drawable/my_border"
        android:layout_alignTop="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBottom="@+id/editText1"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="9dp"
        android:paddingLeft="9dp"
        android:textColor="#FFFFFF"
        android:text="Check Your Status On The Waitlist"
        android:onClick="buttonClickCheckStatus"
        android:background="@drawable/my_border"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>